<%= content_for(:left_menu) do %>
    <%= render :partial=>"dashboards/left_menu" %>
<% end %>

<section id="take_test_blue-container">

    <div class="custom-container">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
          <div class="row" style="margin-top: 20%;" >
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1" style="padding-left: 0;">
              <p class="white"><%= @test.intro %></p>
            </div>
          </div>


          <div class="row" style="margin-top: 5%;">
            <% @test.quizzes.each do |e| %>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1" style="padding-left: 0">
                  <a class="btn-main ans_btn" href="<%= take_test_path(e.id,e.questions.first.id) %>" id="ans_test_btn"><%= e.name %></a>
                </div>
                <br><br>
            <% end %>
          </div>


        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <img alt="Title" class="img-responsive" src="/assets/cofee.jpg">
        </div>

      </div>
    </div>

  </section>








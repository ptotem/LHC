<%= content_for(:left_menu) do %>
    <%= render :partial=>"dashboards/left_menu" %>
<% end %>

<%= content_for(:dialogue_bar_header) do %>
    <%= @test.name %>
<% end %>



<section id="take_test_blue-container">

    <div class="custom-container">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
          <div class="row">
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1" style="padding-left: 0;">
              <p class="white"><%= @test.intro %></p>
            </div>
          </div>


          <div class="row" style="height:576px;max-height:576px;overflow-y:auto;">
            <% @test.quizzes.each do |e| %>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-left: 0;display:inline-block;margin-bottom:2%;">
                  <a class="btn-main ans_btn" style="width:100%; display:inline-block;" href="<%= take_test_path(e.id,e.questions.first.id) %>" id="ans_test_btn"><%= e.name %></a>
                </div>

            <% end %>
          </div>


        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <img alt="Title" class="img-responsive" src="/assets/cofee.jpg">
        </div>

      </div>
    </div>

  </section>








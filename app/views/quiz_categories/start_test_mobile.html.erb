<%= content_for(:left_menu) do %>
    <%= render :partial=>"dashboards/left_menu" %>
<% end %>

<%= content_for(:dialogue_bar_header) do %>
    <%= @test.name %>
<% end %>

<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-11 col-sm-11 col-md-11 col-lg-11">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <p class="white"><%= @test.intro %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

          <% @test.quizzes.each do |e| %>
              <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <!--<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 ans_btn indi-test test-thumbs" style="height: 122px; width: 100%; margin-left: 0; margin-top: 0">-->
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 ans_btn indi-test-mobile test-thumbs" style="background: transparent; background-image: url('<%= get_image_from_content("quiz-" + e.name) %>'); background-size: 100% 100%;">
                  <% if !e.questions.first.nil? %>

                      <a style="width:100%;height: 100%; display:table-cell;vertical-align: middle" href="<%= take_test_path(e.id, e.questions.first.id) %>" id="ans_test_btn"><%= e.quiz_text %></a>
                  <% end %>
                  <div class="hover-text" style="display: table-cell; left: 0; position: absolute; width: 100%; text-align: center; vertical-align: middle;"> <%#= e.name %></div>
                </div>
              </div>
          <% end %>

      </div>
    </div>

  </div>
</div>
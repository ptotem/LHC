<section id="test_section">
  <div class="container">
    <div class="row margin-top-25">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 blue-background white">

        <% 9.times do |step| %>
            <div id="step_<%= step+1 %>" class="test-steps" style="display: none;">
                <h4 style="font-size: 1.3em;"> <%= step+1 %>. I can detect the mood of others by looking at them as we converse</h4>
                <ul style="list-style: none">
                  <% 4.times do |test_ans_option| %>
                      <li>
                        <%= radio_button_tag 'test_1', "", false, class: "test_options", :style=>"float: left;" %>
                        <p style="padding-left: 5%; padding-top: 0.7%;">Most of the time</p>
                      </li>
                  <% end %>
                </ul>
              <hr>
            </div>
        <% end %>

        <div class="row">
          <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <a href="javascript:void(0)" class="btn-main" id="ans_test_btn">Answer</a>
          </div>
          <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xs-offset-7 col-sm-offset-7 col-md-offset-7 col-lg-offset-7">
            <p> <span id="current_step">0</span> / <span id="total_steps">0</span> </p>

          </div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <img alt="Title" class="img-responsive" src="/assets/about_us.png">
      </div>
    </div>
  </div>
</section>

<script>
  $(function(){
      var current_step = 0;
      var total_steps;
      total_steps = $('.test-steps').length;

      $('.test-steps').eq(current_step).show();
      $('#current_step').text(current_step+1);
      $('#total_steps').text(total_steps);

      $('#ans_test_btn').on('click', function(){
          $('.test-steps').hide();
          current_step = current_step + 1;
          if ( current_step >= (total_steps-1) ) {
              current_step = total_steps-1;
              $('.test-steps').eq(current_step).show();
              $('#current_step').text(current_step+1);
              console.log("test complete");
          }
          else{
              $('.test-steps').eq(current_step).show();
              $('#current_step').text(current_step+1);
          }
      });

  });
</script>
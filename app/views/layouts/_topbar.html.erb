<div class="navbar navbar-inverse navbar-fixed-top">

  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand " href="index.html"><img class="img-responsive" src="/assets/logo.png" alt="Logo"></a>
    </div>

    <% @controller = params[:controller]%>
    <% @sign_in_method = @controller.split("/").last %>
    <%= @sign_in_method %>
    <% if user_signed_in? %>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="active"><a href="#">Dashboard</a></li>
            <li><a href="#">Test</a></li>
            <li><a href="#">LHC</a></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Contact</a></li>
            <li class="sign-up">
              <a rel="nofollow" href="/users/sign_out" data-method="delete"><span class="white">Sign out</span></a>
              <%#= link_to "Sign out", destroy_user_session_path, :method => :delete %>
            </li>
          </ul>
        </div>
    <% else %>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Contact</a></li>
            <li class="sign-up">
              <% if @sign_in_method == "sessions" %>
                <a href="/users/sign_up"><span class="white">Sign up</span></a>
              <% elsif @sign_in_method == "registrations" %>
                  <a href="/users/sign_in"><span class="white">Sign in</span></a>
              <% end %>
            </li>
          </ul>
        </div>
    <% end %>
  </div>

</div>
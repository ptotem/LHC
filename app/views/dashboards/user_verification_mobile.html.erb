<%= content_for(:dialogue_bar_header) do %>
    User Verification
<% end %>

<div class="row" style="margin-top: 2%;">
  <div class="col-xs-offset-1 col-xs-11 col-sm-12 col-md-12 col-lg-12">
    <div class="row">
      <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2" style="padding-top: 7%;">
        <i class="fa fa-check-square-o fa-3x white"></i>
      </div>
      <div class="col-xs-10 col-sm-9 col-md-9 col-lg-9">
        <h4 class="white">Verify yourself to view your match</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= form_for @user_document, :url => url_for(:controller => 'user_documents', :action => 'create'), :html => {:multipart => true} do |user_doc_form| %>
            <%#= form_for :user, :url => url_for(:controller => 'dashboards', :action => 'upload_user_doc'), :html => {:multipart => true} do |user_doc_form| %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h5 class="white" style="font-size: 1.3em">
                  Upload a scanned copy of any of the below mentioned documents
                </h5>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <%= select_tag "doc_type", "<option>College Identity Card</option><option>College Mark Sheet</option><option>Degree</option>".html_safe, class: 'form-control' %>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <%= user_doc_form.hidden_field :user_id, :value => current_user.id %>
                <%= user_doc_form.file_field :avatar %>
              </div>
            </div>

            <div class="row" style="margin-top: 2%;">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <%= user_doc_form.submit "Upload", :class => "btn btn-main red-btn" %>
              </div>
            </div>
            <!--<p class="white">(These document would be secure)</p>-->

        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h4 class="white text-center">OR</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= form_for :user, :url => url_for(:controller => 'dashboards', :action => 'verify_user_linkedin_url') do |user_form| %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <%= user_form.hidden_field :user_id, :value => current_user.id %>
                <%= user_form.text_field :verification_text, :class => "col-xs-12 col-sm-12 col-md-12 col-lg-12", :placeholder => "Enter your linkedin public profile" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <%= user_form.submit "Verify", :class => "btn btn-main red-btn" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
<%= content_for(:left_menu) do %>
    <%= render :partial=>"dashboards/left_menu" %>
<% end %>
<%= content_for(:dialogue_bar_header) do %>
    Prove yourself !
<% end %>

<%= content_for(:page_header) do %>
    Ice Breaker Question
<% end %>


<section id="take_test_blue-container">
  <div class="custom-container">
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 no-padding">
        <div class="row" >
          <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">

            <div id="step_<%= @question_icebreaker.id %>" class="test-steps" style="height: 500px; min-height: 500px; overflow-x: hidden; overflow-y: auto; padding: 0 4% 4%;">
              <div class="row" style="margin-top: 4%;">
                <h4 style="font-size: 1.8em;"><%= @question_icebreaker.name %></h4>
              </div>
              <div class="row">
                <ul class="test_ul">

                  <%= form_for(@icebreaker_answer) do |f| %>

                      <%= f.hidden_field :user_id,:value => current_user.id %>
                      <%= f.hidden_field :question_id,:value => @question_icebreaker.id %>
                      <%= f.hidden_field :ice_breaker_id,:value => params[:id] %>


                      <div class="field">
                        <% @question_icebreaker.options.each_with_index do |e, index| %>
                            <% if (index+1)%4 == 0%>
                                <li>
                                  <%= f.radio_button :answer_id,e.id, :checked=>true, :style=>"float: left;" %>
                                  <p class="radio_text" style="padding-top: 0"><%= e.name %></p>
                                </li>
                            <% else %>
                                <li>
                                  <%= f.radio_button :answer_id,e.id, :style=>"float: left;" %>
                                  <p class="radio_text" style="padding-top: 0"><%= e.name %></p>
                                </li>
                            <% end  %>

                        <% end %>
                      </div>

                      <div class="actions" style="margin-top: 5%;">
                        <%= f.submit "Answer", :class=>"btn-main ans_btn" %>
                      </div>

                      <div class="status" style="  float: right; margin-right: 30%; margin-top: -28px;">
                        <%= @current_question_index %> /
                        <%= @total_questions %>
                      </div>


                  <% end %>
                </ul>
              </div>

            </div>

          </div>
        </div>


      </div>

    </div>
  </div>

</section>





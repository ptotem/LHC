<%= content_for(:page_header) do %>
    Snazz me up
<% end %>

<%= content_for(:dialogue_bar_header) do %>
    Snazz Me Up
<% end %>

<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-11 col-sm-11 col-md-11 col-lg-11">

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h5 class="white"><%= get_content_for('snazzmeupIntroText') %></h5>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ul class="list-inline portfolio text-center">
          <% QuizCategory.all.each_with_index do |e, index| %>
              <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <li data-tag="web">
                  <div class="test-thumbs">
                    <!--<img src="/assets/assertiveness.jpg" class="img-responsive" alt="Image Size 430x280" style="width: 100%;">-->
                    <%= image_tag e.avatar.url, :class => "img-responsive", :style => "width: 100%;" %>
                    <a href="<%= start_test_path(e.id) %>">
                    <span class="title">
                        <span class="white upper-case">
                          <h5>Take the</h5>
                          <h2>Test!</h2>
                        </span>
                    </span>
                    </a>
                  </div>
                  <div class="project-title margin-30">
                    <h5><%= e.name %></h5>
                  </div>
                </li>
              </div>
          <% end %>
        </ul>
      </div>
    </div>


  </div>
</div>
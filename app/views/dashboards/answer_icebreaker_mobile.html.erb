<%= content_for(:dialogue_bar_header) do %>
    Prove yourself !
<% end %>
<%= content_for(:page_header) do %>
    Ice Breaker Question
<% end %>

<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-11 col-sm-11 col-md-11 col-lg-11">
    <!--<h1 class="red">Answer IceBreaker</h1>-->
    <div id="step_<%= @question_icebreaker.id %>" class="test-steps" style="padding: 0 4% 4%;">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h4 style="font-size: 1.4em; line-height: 1.4em" class="white"><%= @question_icebreaker.name %></h4>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <ul class="test_ul">
            <%= form_for(@icebreaker_answer) do |f| %>
                <%= f.hidden_field :user_id,:value => current_user.id %>
                <%= f.hidden_field :question_id,:value => @question_icebreaker.id %>
                <%= f.hidden_field :ice_breaker_id,:value => params[:id] %>
                <div class="field">
                  <% @question_icebreaker.options.each_with_index do |e, index| %>
                      <% if (index+1)%4 == 0%>
                          <li>
                            <%= f.radio_button :answer_id,e.id, :checked=>true, :style=>"float: left;" %>
                            <p class="radio_text" style="padding-top: 0; margin-left: 2%"><%= e.name %></p>
                          </li>
                      <% else %>
                          <li>
                            <%= f.radio_button :answer_id,e.id, :style=>"float: left;" %>
                            <p class="radio_text" style="padding-top: 0; margin-left: 2%"><%= e.name %></p>
                          </li>
                      <% end  %>
                  <% end %>
                </div>

                <div class="actions" style="margin-top: 5%;">
                  <div class="row">
                    <div class="col-xs-5 col-sm-6 col-md-6 col-lg-6">
                      <%= f.submit "Answer", :class=>"btn-main ans_btn" %>
                    </div>
                    <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2 col-xs-4 col-sm-4 col-md-4 col-lg-4">
                      <div class="status" style="margin-top: 8px;">
                        <%= @current_question_index %> /
                        <%= @total_questions %>
                      </div>
                    </div>
                  </div>
                </div>

            <% end %>
          </ul>
        </div>
      </div>

    </div>

  </div>
</div>
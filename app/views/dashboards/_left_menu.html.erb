<style>
  .buttonmenu{
      width: 100%;
      background-color: #3E4549;
      font-size: 1.5em;
      color: white;
      font-weight: 350;
      padding: 5%;
      border: none;
      font-family: 'Open Sans', sans-serif;
      text-align: left;
      position: relative;
  }

  .buttonmenu:hover{
      width: 100%;
      background-color:#ff0000;
      font-size: 1.5em;
      color: white;
      font-weight: 350;
      padding: 5%;
      border: none;
      text-align: left;
  }

  .profilepic{
      width: 100%;
      height: 100%;
  }

  .active-btn{
      background-color:#ff0000;
  }

    .buttonmenu .bubble {
      background: none repeat scroll 0 0 #E02424;
      border-radius: 3px 3px 3px 3px;
      color: #FFFFFF;
      font: bold 0.9em Tahoma,Arial,Helvetica;
      padding: 2px 6px;
      position: absolute;
      top: 0;
      right: 0;
  }



</style>


<section id="left_menu">
    <div class="row" id="dashboard_user_profile_pic" >

        <div class="thumbs" style="height: 216px; max-height: 216px;">
          <% if current_user.demographic.avatar.nil? %>
              <a href="/assets/profile_pic.jpg" class="fancybox" title="Sample title">
                <!--<img src="small_image.jpg" />-->
                <img alt="Image Size 430x280" class="img-responsive profilepic" src="/assets/profile_pic.jpg">
              </a>
          <% else %>
              <img alt="Image Size 430x280" class="img-responsive profilepic" src="<%= current_user.demographic.avatar.url %>">
          <% end %>
        </div>

    </div>







    <div class="row" style="margin-top: 1%">
        <button class="buttonmenu" id="profile_btn" onclick="window.location='/profile/'+<%= current_user.id %>">Profile</button>
    </div>

    <div class="row" style="margin-top: 1%">
        <button class="buttonmenu" id="matches_btn" onclick="window.location='/quick_matches'">Matches <span class=bubble> <%= currnoti rescue 0 %>   </span></button>
    </div>

    <div class="row" style="margin-top: 1%">
        <button class="buttonmenu" id="mutual_likes_btn" onclick="window.location='/mutual_likes'">Mutual Likes <span class=bubble> <%= mutuallikes rescue 0 %> </span> </button>
    </div>

    <div class="row" style="margin-top: 1%">
        <button class="buttonmenu" id="conversation_btn" onclick="window.location='/conversations'">Conversations</button>
    </div>

    <div class="row" style="margin-top: 1%">
        <button class="buttonmenu" id="snazz_me_up_btn" onclick = "window.location='/snazzmeup'">Snaz Me Up!</button>
    </div>

</section>


<%= content_for(:left_menu) do %>
    <%= render :partial=>"dashboards/left_menu" %>
<% end %>
<%= content_for(:dialogue_bar_header) do %>
    Prove yourself !
<% end %>

<div class="row">
  <div class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-11 col-sm-11 col-md-11 col-lg-11">
    <div class="row">
      <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
        <h5 class="white" style="font-size: 1.4em;">The <%= @quiz.name %> Quiz</h5>
      </div>
      <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2" style="padding-top: 2%;">
        <!--<img class="img-responsive" src="/assets/cup4.png">-->
        <img src="<%= get_image_from_content("quiz-" + @quiz.name) %>" class="img-responsive">
      </div>
    </div>
  </div>
</div>




<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <!--<p class="white"><%#= get_content_for('quizReviewText') %></p>-->
    <div class="row" style="margin-top: 2%;">
      <div class="col-xs-offset-1 col-xs-11 col-sm-11 col-md-11 col-lg-11 text-center">
        <% if @quiz.quiz_category.name.include?("Trivia") %>
            <h5 class="white" style="font-size: 1.4em;"><%= get_content_for('triviaQuizSummaryText') %></h5>
        <% else %>
            <h5 class="white" style="font-size: 1.4em;"><%= get_content_for('personalQuizSummaryText') %></h5>
        <% end %>

      </div>
    </div>
    <div class="row" style="margin-top: 5%;">
      <div class="col-xs-5 col-xs-offset-1">
        <button style="padding: 10px 12px" class="send-icebreaker_btn" id="send_icebreaker_btn" onclick="window.location='<%= retest_path(@quiz.id) %>'">Retake Quiz</button>
      </div>
      <div class="col-xs-5 col-xs-offset-1">

        <% if @quiz.quiz_category.name.include?("Trivia") %>
            <button style="padding: 1px 12px" class="send-icebreaker_btn" id="send_icebreaker_btn" onclick="window.location='<%= user_profile_path(current_user.id) %>#stuff-i-like'">View Your Responses</button>
        <% else %>
            <button style="padding: 1px 12px" class="send-icebreaker_btn" id="send_icebreaker_btn" onclick="window.location='<%= younme_path(current_user.id) %>'">View Snapshot</button>
        <% end %>


      </div>
    </div>
  </div>
  <!--<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2" style="height: 100%;">-->
  <!--<img src="<%#= get_image_from_content("quiz-" + @quiz.name) %>" style="width: 100%; min-height: 334px; max-height: 334px;">-->
  <!--</div>-->
</div>
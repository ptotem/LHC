<!--user_verification-->
<section id="user_verification">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="row">
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
          <i class="fa fa-check-square-o fa-5x white" ></i>
          <!--<i class="fa fa-user fa-5x"></i>-->
        </div>
        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" style="margin-top: 15px;">
          <span class="white" id="verify_text">Verify</span>
          <h5 class="white" id="yourself_text">yourself to view your match</h5>
        </div>
      </div>
    </div>
  </div>

  <br>
  <br>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= form_tag '/upload', multipart: true do %>
          <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= email_field_tag 'email', "", :class => "col-xs-12", :placeholder => "Enter your institute email" %>
            </div>

            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
              <button id="verify_buttn">Verify</button>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h4 class="white text-center">OR</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h5 class="white" style="font-size: 1.3em">Upload a scanned copy of any of the below mentioned
                documents</h5>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <%= select_tag "doc_type", "<option>College Identity Card</option><option>College Mark Sheet</option><option>Degree</option>".html_safe, class: 'col-xs-6' %>
              <%= file_field_tag "file", :class => "col-xs-4", :placeholder => "Enter your institute email" %>
            </div>
          </div>
          <p class="white">(These document would be secure)</p>

          </div>
          <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h4 class="white text-center">OR</h4>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
              <h5 class="white text-center" style="font-size: 1.3em">Verify your linkedin profile</h5>
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="margin-left: -50px;">
              <a target="_blank" href="#" class="linkedin"><i class="fa fa-linkedin fa-3x white"></i></a>
            </div>
          </div>
          </div>
          <br>
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <button id="verify_buttn">Verify</button>
            </div>
          </div>
      <% end %>
      </div>
      </div>
      </section>




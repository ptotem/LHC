    #upload {
        position: relative;
    }

    #upload .wrapper {
        opacity: 0;
        cursor: pointer;
        position: absolute;
        top: 0;
        z-index: 2;
    }

    #upload .wrapper:hover
    {
        opacity: 1;
    }




</style>


<%= content_for(:left_menu) do %>
    <%= render :partial=>"left_menu" %>
<% end %>


<!--user_verification-->
<section id="user_verification">
  <div class="row"  style="margin-top: 2%;">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="row">
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
          <i class="fa fa-check-square-o font_awesome_icon white" ></i>
        </div>
        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" style="margin-top: 20px;margin-left: 2%;">
          <span class="white" id="verify_text">Verify</span>
          <h5 class="white" id="yourself_text">yourself to view your match</h5>
        </div>
      </div>
    </div>
  </div>

  <br>
  <br>

  <div class="row" >
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= form_tag '/upload', multipart: true do %>
          <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <%= email_field_tag 'email', "", :class => "col-xs-12", :placeholder => "Enter your institute email" %>
            </div>

            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
              <button id="verify_buttn">Verify</button>
            </div>
          </div>


          <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h4 class="white text-center">OR</h4>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h5 class="white" style="font-size: 1.3em">Upload a scanned copy of any of the below mentioned
                documents</h5>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8" >
              <%= select_tag "doc_type", "<option>College Identity Card</option><option>College Mark Sheet</option><option>Degree</option>".html_safe, class: 'form-control' %>
              </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2" id="upload">
              <!--<button id="verify_buttn">Verify</button>-->
              <div class="wrapper">
              <%= file_field_tag "file", :class => "verify_buttn", :placeholder => "Enter your institute email" %>

                </div>
              <button id="verify_buttn"  class="file_upload">Upload!</button>
            </div>
          </div>
          <!--<p class="white">(These document would be secure)</p>-->


          <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h4 class="white text-center">OR</h4>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
              <fieldset><p><input id="name" name="name" type="text" class="col-xs-12" placeholder="Verify Your Linkedin"/></p></fieldset>
            </div>
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4">
                <button id="verify_buttn">Submit</button>
            </div>
          </div>
         </div>

      <% end %>
      </div>
      </div>
      </section>



<!-- ========================= Contact Page Begins ========================= -->
<section id="contact_page_title_section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 title-white">
        <h2>Contact</h2>
      </div>
    </div>
  </div>
</section>

<section id="contact_section">
  <div class="container">
    <div class="row" style="padding-top: 5%">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <%= form_tag ('/contacts'), :class => "form-horizontal" do %>

            <div class="control-group">
              <div class="controls">
                <div class="row">
                  <%= text_field_tag 'name', nil, placeholder: 'Name', class: 'input-xlarge col-xs-8 col-xs-offset-2' %>
                </div>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <div class="row">
                  <%= email_field_tag 'email', nil, placeholder: 'E-mail', class: 'input-xlarge col-xs-8 col-xs-offset-2' %>
                </div>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <div class="row">
                  <%= select_tag "subject", "<option>I want to add my college to let's have coffee!</option><option>I want to know more about let's have coffee!</option><option>I want to share my story</option><option>I have some interesting proposal for you</option>".html_safe, prompt: "Subject", class: 'input-xlarge col-xs-8 col-xs-offset-2' %>
                </div>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <div class="row">
                  <%= submit_tag 'Send Message', :class=>"btn-main col-xs-offset-2" %>
                </div>
              </div>
            </div>
        <% end -%>
      </div>
      <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
        <h2 class="gray">Side Bar Title</h2>
        <p>
          lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum
          lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum
          lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum
        </p>
      </div>
    </div>
  </div>
</section>
<!-- ========================= Contact Page Ends ========================= -->

<script>

    $(function(){
        //$('#criteria_fill_step_1').fadeIn();

        //TODO: write contact in respective view
        var which_page;
        which_page = "contact"; // values => contact, relationship_test, dashboard etc...

        if ( which_page == "algo" ) {
            $('#contact_page_title_section').hide();
            $('#contact_section').hide();
        }
        else if ( which_page == "contact" ) {
            $('#contact_page_title_section').show();
            $('#contact_section').show();
        }
        else if ( which_page == "relationship_test" ) {
            $('#contact_page_title_section').hide();
            $('#contact_section').hide();
        }
        else if ( which_page == "dashboard" ) {
            $('#contact_page_title_section').hide();
            $('#contact_section').hide();
        }

    });

</script>

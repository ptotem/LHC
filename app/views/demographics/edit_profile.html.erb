<!-- ========================= Edit Profile Page Starts ========================= -->

<section id="edit_profile_section">
  <!--<div class="container">-->
    <div class="row" style="padding-top: 3%;">
      <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">

        <%= form_for @user, :url => { :controller => "demographics", :action => "update_profile" }, :html => { :method => :post } do |f| %>

            <%= f.fields_for :demographic do |d| %>
                <table>
                      <tr>
                        <th>Name :- </th>
                        <td><%= d.text_field :name %></td>
                      </tr>
                      <tr>
                        <th>Nickname :- </th>
                        <td><%= d.text_field :nickname %></td>
                      </tr>
                      <tr>
                        <th>Gender :- <%= @user.demographic.male? %></th>
                        <td>
                          <% if @user.demographic.male? %>
                              Male :- <%= d.check_box :male, {:checked=>true} %> Female :- <%= d.check_box :male,{:checked=>false} %>
                          <% else %>
                              Male :- <%= d.check_box :male %> Female :- <%= d.check_box :male, {:checked=>true} %>
                          <% end %>
                        </td>
                      </tr>
                      <tr>
                        <th>Religion :- </th>
                        <td><%= d.text_field :religion %></td>
                      </tr>
                      <tr>
                        <th>DOB :- </th>
                        <td><%= d.date_select :dob, :order => [:day, :month, :year] %></td>
                      </tr>
                      <tr>
                          <th>Smoking :- </th>
                          <td><%= d.select :smoking, ['Never','Socially','Often'] %></td>
                      </tr>
                      <tr>
                        <th>Drinking :- </th>
                        <td><%= d.select :drinking, ['Never','Socially','Often'] %></td>
                      </tr>
                      <tr>
                        <th>Description :- </th>
                        <td><%= d.text_area :description %></td>
                      </tr>
                      <tr>
                        <th>Goal :- </th>
                        <td><%= d.text_area :goal %></td>
                      </tr>
                      <tr>
                        <th>Difference Threshold :- </th>
                        <td>
                          <%= d.text_field :diffthresh %>
                        </td>
                      </tr>
                </table>

            <% end %>

            <%= f.fields_for :criterion do |c| %>
                <table>
                  <tr>
                    <th>Age Range :- </th>
                    <% min_age = 18..28 %>
                    <% max_age = 22..36 %>
                    <td>
                      From <%= c.select(:minage, min_age.collect {|d| [d.to_s,d.to_s]}) %>
                      To <%= c.select(:maxage, max_age.collect {|d| [d.to_s,d.to_s]}) %>
                    </td>
                  </tr>
                </table>
            <% end %>

            <%= f.fields_for :attendances do |a| %>
                <table>
                  <tr>
                    <th>College :- </th>
                    <td><%= a.collection_select(:institution_id, Institution.all, :id, :name, :prompt => 'Select') %></td>
                  </tr>
                </table>
            <% end %>

            <%= f.fields_for :professions do |p| %>
                <table>
                  <tr>
                    <th>Profession :- </th>
                    <td><%= p.text_field :name %></td>
                  </tr>
                </table>
            <% end %>

            <%= f.fields_for :revelations do |r| %>
                <table>
                  <tr>
                    <th>What friends say about me : :- </th>
                    <td><%= r.text_field :question_id %></td>
                  </tr>
                </table>
            <% end %>

            <%= f.fields_for :expectations do |e| %>
                <table>
                  <tr>
                    <th>In next 5 years, I would be :- </th>
                    <td><%= e.text_field :question_id %></td>
                  </tr>
                </table>
            <% end %>

            <div class="actions">
              <%= f.submit :class=>"btn-main" %>
            </div>

        <% end %>



      </div>
    </div>
  <!--</div>-->
</section>
<!-- ========================= Edit Profile Page Ends ========================= -->